<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Ta name</th>
      <th>Uid</th>
      <th>Transport</th>
      <th>Accomodation</th>
      <th>Event</th>
      <th>Organizer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.ta_name %></td>
        <td><%= offer.uid %></td>
        <td><%= offer.transport %></td>
        <td><%= offer.accomodation %></td>
        <td><%= offer.event %></td>
        <td><%= offer.organizer_id %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

