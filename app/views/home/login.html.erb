            <!-- ruby form -->
            <%= form_with(model: @user, local: true, class: "box") do |f| %>
              <div class="field">
                <%= f.label :email, class: "label" %>
                <div class="control has-icons-left">
                  <%= f.text_field :email, 
                    type: "email",
                    placeholder: "e.g. bobsmith@gmail.com", 
                    class: "input", 
                    :required => true %>
